# Ativar reescrita de URL
RewriteEngine On
RewriteBase /

# Redirecionar URLs do tipo /blog/slug-do-post
RewriteRule ^blog/([^/]+)/?$ blog_post/post.php?slug=$1 [L,QSA]

# Remover extensão .php das páginas na raiz
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L]

# Redirecionar /pagina.php para /pagina (SEO-friendly)
RewriteCond %{THE_REQUEST} \s/([^.]+)\.php [NC]
RewriteRule ^ /%1 [R=301,L]

# Desativa a listagem de diretórios para todas as pastas
Options -Indexes